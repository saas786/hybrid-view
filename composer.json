	"keywords"    : [ "wordpress" ],
	"homepage"    : "https://github.com/themehybrid/hybrid-view",
	"license"     : "GPL-2.0-or-later",
	"authors"     : [
		{
			"name"     : "Justin Tadlock",
			"email"    : "justintadlock@gmail.com",
			"homepage" : "https://themehybrid.com",
			"role"     : "Developer"
		}
	],
	"support"     : {
		"issues" : "https://github.com/themehybrid/hybrid-view/issues",
		"forum"  : "https://themehybrid.com/board/forums/hybrid-core"
	},
  "repositories": [
	{
	  "type": "vcs",
	  "url": "https://github.com/themehybrid/hybrid-template"
	}
  ],
	"autoload"    : {
		"psr-4" : {
			"Hybrid\\View\\" : "src/"
		},
		"files" : [
			"src/functions-view.php"
		]
	},
	"require"     : {
		"php" : ">=5.6",
	  	"themehybrid/hybrid-template": "^1.0.0"
	}
}
